        <div class="functions-container">
            
            <h3 class="functions__title">Controles</h3>

            <div class="functions__controls">

                <div class="form_group">
                    <div class="form-inner">
                        <label for="talker">Talk with Robot</label>
                        <input id="talker" name="talker">
                        <button id="talk-action-btn">Talk ></button>
                    </div>

                    <div class="form-inner">
                        <label for="actions">What do you want to do?</label>
                        <select name="actions" id="actions">
                            <option value="none">Select one</option>
                            <option value="chargeit">Charge me</option>
                            <option value="dance">Dance</option>
                            <option value="talktome">Talk to me</option>
                        </select>
                    </div>
                </div>

                <div  id="helpersmsj" class="helpers-msj text-styles">
                    <h2>Tip!</h2>
                    <div class="msjhelperwrapper"></div>
                </div>

                <button id="toggle-info" class="info-btn">More info!</button>

            </div>
        </div>

    </div>

</section>